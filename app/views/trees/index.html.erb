<p id="notice"><%= notice %></p>
<p><strong>Fruit and Nut Trees</strong></p>
<%= link_to 'New Tree', new_tree_path %>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Care</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trees.each do |tree| %>
      <tr>
        <td><%= tree.name %></td>
        <td><%= tree.care %></td>
        <td><%= tree.picture %></td>
        <td><%= link_to 'Show', tree %></td>
        <td><%= link_to 'Edit', edit_tree_path(tree) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
