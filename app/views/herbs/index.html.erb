<p id="notice"><%= notice %></p>
<%= link_to 'New Herb', new_herb_path %>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Care</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @herbs.each do |herb| %>
      <tr>
        <td><%= herb.name %></td>
        <td><%= herb.care %></td>
        <td><%= herb.picture %></td>
        <td><%= link_to 'Show', herb %></td>
        <td><%= link_to 'Edit', edit_herb_path(herb) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
